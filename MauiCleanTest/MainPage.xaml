<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:MauiCleanTest"
             x:DataType="local:MainPageViewModel"
             x:Class="MauiCleanTest.MainPage">
    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">

            <Button
                x:Name="CounterBtn"
                Text="Go to Page"
                Clicked="OnCounterClicked"
                HorizontalOptions="Fill" />
            <Button
                Text="Cleanup"
                Clicked="Button_Clicked" />
            <Label x:Name="MemInfo" HorizontalTextAlignment="Center" />
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>

